<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/fab_labels_background_color_pressed"/>
            <padding android:left="8dp" android:top="4dp" android:right="8dp" android:bottom="4dp"/>
            <corners android:radius="@dimen/fab_menu_title_background_corner_radius"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/fab_labels_background_color_normal"/>
            <padding android:left="8dp" android:top="4dp" android:right="8dp" android:bottom="4dp"/>
            <corners android:radius="@dimen/fab_menu_title_background_corner_radius"/>
        </shape>
    </item>

</selector>